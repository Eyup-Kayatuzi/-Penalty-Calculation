@using PenaltyCalculationApp.ViewModels;
@model PenaltyInputVM

<form asp-action="Index" method="post" class="form-horizontal" role="form">


    <div class="form-group">
        <label asp-for="FromDate" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="FromDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ToDate" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ToDate" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <select asp-for="Country.Id" class="form-control">
                <option value="">-- Select Country --</option>
                @foreach (var country in ViewBag.countryList)
                {
                    <option value="@country.Id">@country.Name</option>
                }
            </select>
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Calculate Penalty" />
        </div>
    </div>

</form>

@if (ViewBag.ShowResult)
{
    <div class="row">
        <div class="col-md-7">
            <div class="alert alert-info" role="alert">
                <p>Business Days : <span class="badge alert-success">@ViewBag.BusinessDays</span></p>
                <p>Penalty Price : <span class="badge alert-warning">@ViewBag.Penalty  @ViewBag.CurrencySymbol</span></p>
            </div>
        </div>
    </div>
}




